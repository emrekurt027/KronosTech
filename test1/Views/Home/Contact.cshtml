@model test1.Models.MailModel
@{
    ViewData["Title"] = @SharedHtmlLocalizer["Contact.MainTitle"];
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-5 col-sm-12 mt-2">
            <!-- CONTACT INFO -->
            <div class="animated fadeInUp container" data-wow-delay="0.4s">
                <div class="row">
                    <div class="container-fluid">
                        <div class="fa-pull-left HeadText">@SharedHtmlLocalizer["LogoEnergy"]</div>
                        <div class="fa-pull-right">
                            <a href="https://twitter.com/kronosenergy"><i class="fab fa-twitter-square fa-2x"></i></a>
                            <a href="https://www.facebook.com/kronosenergy"><i class="fab fa-facebook-square fa-2x"></i></a>
                        </div>
                    </div>
                </div>
                <p class="ContentText"><i class="fas fa-building mr-2 iconBtn"></i>@SharedHtmlLocalizer["Contact.Info.Name"]</p>
                <p class="ContentText"><i class="fas fa-map-marker-alt mr-1 iconBtn"></i>@SharedHtmlLocalizer["Contact.Info.Adress"]<br></p>
                <p class="ContentText"><i class="fas fa-phone mr-1 iconBtn"></i> @SharedHtmlLocalizer["Contact.Info.Phone"]</p>
                <p class="ContentText"><i class="fas fa-fax mr-1 iconBtn"></i>@SharedHtmlLocalizer["Contact.Info.Fax"]</p>
                <p class="ContentText"><i class="fa fa-comment iconBtn"></i> <a href="mailto:info@kronosenergy.com.tr">info@kronosenergy.com.tr</a></p>
                <p class="ContentText"><a href="http://www.kronosenergy.com.tr/tr/index.html"><i class="fas fa-globe-europe mr-1 iconBtn"></i><b>Web:</b> www.kronosenergy.com.tr</a></p>
            </div>
        </div>
        <div class="col-md-7 col-sm-12 mt-2">
            <!-- CONTACT FORM HERE -->
            <div class="wow fadeInUp" data-wow-delay="0.4s">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-group" }))
                {
                    <div class="row" style="padding:0 20px;">
                        <div class="col-md-12 col-sm-12">
                            <!-- SECTION TITLE -->
                            <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                                <h2 class="HeadText">@SharedHtmlLocalizer["Contact.Form.Head"]</h2>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group inner-addon left-addon">
                                <label for="Name">@SharedHtmlLocalizer["Contact.Form.Nameinput"]</label>
                                <i class="fas fa-user iconBtn"></i>
                                <input class="form-control" id="Name" name="Name" placeholder="@SharedHtmlLocalizer["Contact.Form.Nameinput"]" type="text" value="">
                                <label class="text-danger text-center">  <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span></label>
                            </div>
                            <div class="form-group inner-addon left-addon">
                                <label for="Email">@SharedHtmlLocalizer["Contact.Form.Mailinput"]</label>
                                <i class="fas fa-envelope iconBtn"></i>
                                <input class="form-control" id="Email" name="Email" placeholder="@SharedHtmlLocalizer["Contact.Form.Mailinput"]" type="text" value="">
                                <label class="text-danger text-center">  <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span></label>
                            </div>
                            <div class="form-group">
                                <label for="Subject">
                                    @SharedHtmlLocalizer["Contact.Form.ComboHead"]
                                </label>
                                <select id="Subject" name="Subject" class="form-control" required="required">
                                    <option value=0 selected="">@SharedHtmlLocalizer["Contact.Form.ComboDefault"]</option>
                                    <option value=@SharedHtmlLocalizer["Contact.Form.Combo1"]>@SharedHtmlLocalizer["Contact.Form.Combo1"]</option>
                                    <option value=2>@SharedHtmlLocalizer["Contact.Form.Combo2"]</option>
                                    <option value=3>@SharedHtmlLocalizer["Contact.Form.Combo3"]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-7" style="max-height:296px;">
                            <div class="form-group">
                                <label for="message">@SharedHtmlLocalizer["Contact.Form.MessageHead"]</label>
                                <textarea name="message" id="message" class="form-control" rows="5" cols="25" required="required"
                                          placeholder="@SharedHtmlLocalizer["Contact.Form.MessageHead"]"></textarea>  <label class="text-danger text-center">  <span class="field-validation-valid" data-valmsg-for="Message" data-valmsg-replace="true"></span></label>
                            </div>
                            <div class="form-group recaptcha">
                                <div class="row justify-content-center">
                                    <div class="g-recaptcha" data-sitekey="6LcteKQUAAAAAFcJyZXw_iIPNBAcN45lpRhh05lj"></div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 px-2">@SharedHtmlLocalizer["Contact.Form.Button"]</button>
                    </div>
                }               
            </div>
        </div>
    </div>
</div>
<div class="container my-5">
    <div class="row">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3010.985416342459!2d29.175052563077063!3d41.00369239801715!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cacf0fc0807395%3A0xfdc4ec9648bce2fa!2zS3Jvbm9zIEVuZXJqaSBBa2FyeWFrxLF0IE3DvGguIMSwbsWfLiBUYWFoLiBTYW4uIETEscWfLiBUaWMuIEx0ZC4gxZ50aS4!5e0!3m2!1str!2str!4v1557134798176!5m2!1str!2str" width="1920" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
</div>





