@model IEnumerable<test1.Models.ReferenceSrc>
@{
    ViewData["Title"] = "Reference";
}

<style>
    .refIMG {
        width: 100px;
        height: 100px;
        max-width: 100px;
    }
</style>
<!-- Gallery -->
<div class="container">
    <div class="row d-flex justify-content-center flex-wrap">
        @foreach (var item in Model)
        {
        <div class="col-lg-3 col-md-4 col-sm-6 my-2 refIMG" data-toggle="modal" data-target="#modal">
            <a href="#lightbox" data-slide-to="0"><img src="~/lib/images/reference/@item.src" class="img-thumbnail w-100 h-100 my-3"></a>
        </div>
        }
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 my-2 refIMG" data-toggle="modal" data-target="#modal">
                <a href="#lightbox" data-slide-to="0"><img src="~/lib/images/reference/@item.src" class="img-thumbnail w-100 h-100 my-3"></a>
            </div>
        }
    </div>
</div>

